{% comment %}
  Ketubah Text Generator Section
  
  How to use:
  1. Upload ketubah-widget.css and ketubah-widget.iife.js to Theme Assets
  2. Create a new Section in your theme with this code
  3. Add the section to a page template
  4. Set your Vercel API endpoint URL in the section settings
{% endcomment %}

{{ 'ketubah-widget.css' | asset_url | stylesheet_tag }}

<style>
  .ketubah-generator-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    min-height: 400px;
  }
  
  /* Override any theme styles that might conflict */
  .ketubah-generator-wrapper * {
    box-sizing: border-box;
  }
  
  /* Loading state */
  #ketubah-root:empty::before {
    content: 'Loading Ketubah Generator...';
    display: block;
    text-align: center;
    padding: 40px;
    color: #666;
  }
</style>

<div class="ketubah-generator-wrapper">
  <div id="ketubah-root"></div>
</div>

<script>
  // Set the API endpoint from section settings
  window.KETUBAH_API_ENDPOINT = '{{ section.settings.api_endpoint }}';
  
  // Function to initialize the widget
  function initKetubanWidget() {
    if (window.KetubanGenerator && window.KetubanGenerator.init) {
      console.log('Initializing Ketubah Generator...');
      window.KetubanGenerator.init('#ketubah-root');
    } else {
      console.error('KetubanGenerator not found. Make sure ketubah-widget.iife.js is uploaded to Assets.');
    }
  }
  
  // Try to initialize after script loads
  var widgetScript = document.createElement('script');
  widgetScript.src = '{{ "ketubah-widget.iife.js" | asset_url }}';
  widgetScript.onload = initKetubanWidget;
  widgetScript.onerror = function() {
    document.getElementById('ketubah-root').innerHTML = 
      '<p style="color: red; text-align: center;">Error: Could not load ketubah-widget.iife.js. Make sure it is uploaded to Theme Assets.</p>';
  };
  document.head.appendChild(widgetScript);
</script>

{% schema %}
{
  "name": "Ketubah Generator",
  "settings": [
    {
      "type": "text",
      "id": "api_endpoint",
      "label": "API Endpoint URL",
      "default": "https://ketubah-text-generator.vercel.app",
      "info": "Your Vercel deployment URL (e.g., https://your-app.vercel.app)"
    }
  ],
  "presets": [
    {
      "name": "Ketubah Generator",
      "category": "Custom"
    }
  ]
}
{% endschema %}
